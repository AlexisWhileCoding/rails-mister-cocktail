<div class="mx-auto text-center"><h1>Cocktails</h1></div>

<div class="container d-flex align-items-center flex-wrap justify-content-center">
  <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail.id) do %>
      <div class="card m-3 text-center " style="width: 250px; height: 300px;">
        <div class="card-background card-body d-flex" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path cocktail.photo.key %>)">
          <h5 class="card-title w-100" style="vertical-align: bottom;"><%= cocktail.name %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
<div class="text-center"><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary"%></div>
